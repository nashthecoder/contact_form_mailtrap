<div class="container p-5">
    <div class="p-5">
        <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
            <%= value %>
        <% end %>  
    </div>
    <%= form_with scope: :contact_form, url: contact_form_index_path, method: :post, local: true, class: "container" do |form| %>
    <div class="card">
        <h2 class="card-header">Contact Form with MailTrap</h2>
        <div class="card-body">
            <div class="form-group pt-lg-5">
                <%= form.label :name %>
                <%= form.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= form.label :email %>
                <%= form.email_field :email, class: "form-control" %>
            </div>
            <div class="form-group pb-4">
                <%= form.label :message %>
                <%= form.text_area :message, class: "form-control" %>
            </div>
            </div>
            <div class="p-4">
                <%= form.submit "Submit", class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>